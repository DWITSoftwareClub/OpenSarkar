        <div class="footer-navi">
          <a href="<%=static_pages_about_path%>">About</a> | <a href="<%=problems_path%>">Complaints</a> | <a href="<%=suggestions_path%>">Suggestions</a>
        </div>
      </div>
</body>
</html>
